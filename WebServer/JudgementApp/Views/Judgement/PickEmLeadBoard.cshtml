@model JudgementApp.Models.PickemResults

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body style="background: ;color:  ">
    <section class="contact-clean" style="background: ">
        <form method="post" style="max-width: 1000px;text-align: center; background: ">
            <h2 class="text-center">@ViewBag.ContestName</h2>
            <img class="img-responsive" src="/assets/CompanyLogos/@ViewBag.Logo" style="width:200px;" />

            <div>
                <div class="table-responsive">
                    <table class="table table-borderless">
                        <thead>
                            <tr style="color: rgb(0, 227,174); ">
                                <th style="color: ;width: 206px;">Ranking</th>
                                <th style="color: ;width: 206px;">Username</th>
                                <th style="color: ;width: 206px">Score</th>
                                <th style="color: ;width: 206px">Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int i = 1;}
                            @foreach (var row in Model.List)
                            {
                                <tr>
                                    <td>
                                        <a onclick="hide('r-@i')" id="r-@i-hide" style="display: none;font-size: 15px; margin-right: 5px; font-weight: bold; cursor: pointer">-</a>
                                        <a onclick="show('r-@i')"  id="r-@i-show" style="font-size: 15px; margin-right: 5px; font-weight: bold; cursor: pointer">+</a>@row.Ranking
                                    </td>
                                    <td>@row.Username</td>
                                    <td>@row.Score</td>
                                    <td>@row.Date</td>

                                </tr>

                                foreach (var s in row.SubData)
                                {
                                    <tr class="r-@i" style="display: none">
                                        <td>@s</td>
                                    </tr>
                                }

                                { i = i+1;}
                            }



                        </tbody>
                    </table>
                </div>
            </div>
            <button class="btn btn-primary" type="button" onclick="location.href='/pickem-judgement-@ViewBag.CompanyName-@ViewBag.ContestName/@ViewBag.questionId'" >Back to Contest</button>
        </form>
    </section>
    <script src="~/assets/bootstrap/js/bootstrap.min.js"></script>
<script src="~/assets/js/theme.js"></script>
<script>
    function show(cl) {
        $("." + cl).show();
        $("#" + cl + "-hide").show();
        $("#" + cl + "-show").hide();
    }

    function hide(cl) {
        $("." + cl).hide();
        $("#" + cl + "-hide").hide();
        $("#" + cl + "-show").show();
    }
</script>
</body>