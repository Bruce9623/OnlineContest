@model JudgementApp.Models.StreakContext
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "CreateStreakContest";
}

<body style="background: ;color:  ">

    <section  class="contact-clean" id="mainContent">
        <form style="text-align: center;">
            <h2 class="text-center">@Model.ContestName</h2>
            <img class="img-responsive" src="/assets/CompanyLogos/@Model.Logo" style="width:200px;" />
            <input type="hidden" value="@Model.CompanyId" id="companyId" />
            <input type="hidden" value="@Model.Id" id="id" />
            <input type="hidden" value="@Model.ContestId" id="contestId" />
            <input type="hidden" value="@Model.SelectedStocks" id="selectedStocks" />
            <div>
                <div style="text-align:left !important">
                    <table style="width:100%;">

                        <tr id="endDate">
                            <td style="width:20%" >
                                <div class="row">
                                    <div class="col" ><b>End Date</b></div>
                                    <div class="col" style="padding-top:10px" data-toggle="tooltip" title="If no End Date is selected then the contest will go on forever. ">(?)</div>
                                </div>
                            </td>
                            <td >
                                @Html.TextBoxFor(m => m.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @id = "date", @width = "250px", type = "date" })
                            </td>
                        </tr>
                        <tr>
                            <td style="padding: 20px"><b>Asset</b> </td>
                            <td style="padding-top: 20px">
                            <div style="border: 1px solid;
                                        padding: 10px 30px;
                                        width: fit-content;">

                            
                                <label>Stock &nbsp;&nbsp;&nbsp;</label>
                                <input class="form-check-input" type="checkbox" value="" id="stock">
                                <br>
                                <label>ETF &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                                <input class="form-check-input" type="checkbox" value="" id="etf">
                                <br>
                                <label>Forex &nbsp;&nbsp;&nbsp;</label>
                                <input class="form-check-input" type="checkbox" value="" id="forex">
                                <br>
                                <label>Crypto &nbsp;</label>
                                <input class="form-check-input" type="checkbox" value="" id="crypto">
                                <br>
                                <label>All &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                                <input class="form-check-input" type="checkbox" value="" id="all">
                                <br>
                                </div>

                                </td>
                        </tr>
                    </table>

                </div>

            </div>

            <button class="btn btn-primary" type="button" id="publish">Publish</button><br>
            
            @if (Model.IsPublished)
            {
                <input id="publish1" value="true" type="hidden"/>
                <div class="row col-md-12">
                    <div class="pull-left">


                        <a href="@ViewBag.url/streak-judgement-@Model.CompanyName-@Model.ContestName/@Model.Id" id="judgmentLink" class="pull-left" style="cursor: pointer;color: rgb(16,173,137); margin-top:10px;"> @ViewBag.url/streak-judgement-@Model.CompanyName-@Model.ContestName/@Model.Id</a>
                        <b id="btnCopy" class="pull-right btn" style=" margin-left:5px;">copy Url</b>
                        <input id="linkINput" width="1px" style="display:none" />

                    </div>


                    <br />
                </div>
            }

        </form>
       
    </section>

    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="assets/js/theme.js"></script>
<script src="~/assets/js/Streak.js"></script>
</body>
<style>
    p {
        font-size: 16px;
        line-height: 26px;
        letter-spacing: 0.5px;
        color: #484848;
    }

    /* Popup Open button */
    .open-button {
        color: #FFF;
        background: #0066CC;
        padding: 10px;
        text-decoration: none;
        border: 1px solid #0157ad;
        border-radius: 3px;
    }

        .open-button:hover {
            background: #01478e;
        }

    .popup {
        position: fixed;
        top: 0px;
        left: 0px;
        background: rgba(0,0,0,0.75);
        width: 100%;
        height: 100%;
        display: none;
    }

    /* Popup inner div */
    .popup-content {
        width: 500px;
        margin: 0 auto;
        box-sizing: border-box;
        padding: 40px;
        margin-top: 20px;
        box-shadow: 0px 2px 6px rgba(0,0,0,1);
        border-radius: 3px;
        background: #fff;
        position: relative;
    }

    /* Popup close button */
    .close-button {
        width: 25px;
        height: 25px;
        position: absolute;
        top: -10px;
        right: -10px;
        border-radius: 20px;
        background: rgba(0,0,0,0.8);
        font-size: 20px;
        text-align: center;
        color: #fff;
        text-decoration: none;
    }

        .close-button:hover {
            background: rgba(0,0,0,1);
        }
</style>

